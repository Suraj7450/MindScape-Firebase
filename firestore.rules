rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    /* =========================
       USER PRIVATE DATA
    ========================== */
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /mindmaps/{mindmapId} {

        // CREATE: must be signed in & owner
        allow create: if isOwner(userId)
          && request.resource.data.userId == userId;

        // READ: only owner
        allow read: if isOwner(userId);

        // UPDATE: only owner (path-based ownership is sufficient)
        allow update: if isOwner(userId);

        // DELETE: path-based ownership (secure since path contains userId)
        allow delete: if isOwner(userId);

        // Optional nested collection
        match /nodes/{nodeId} {
          allow read, write: if isOwner(userId);
        }

        // Content subcollection (for split schema)
        match /content/{docId} {
          allow read, write: if isOwner(userId);
        }
      }
    }

    /* =========================
       PUBLIC MIND MAPS
    ========================== */
    match /publicMindmaps/{publicId} {

      // Anyone can read public maps
      allow read: if true;

      // Create: signed-in users only
      allow create: if isSignedIn()
        && request.resource.data.originalAuthorId == request.auth.uid
        && request.resource.data.mindmapId is string;

      // Allow updating views/likes ONLY
      allow update: if isSignedIn()
        && (
          request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['views', 'likes'])
        );

      // Delete: only original author OR admin
      allow delete: if isSignedIn()
        && (
          resource.data.originalAuthorId == request.auth.uid
          || isAdmin()
        );
    }

    /* =========================
       AUDIT LOGS
    ========================== */
    match /activityLogs/{logId} {
      // Allow any signed-in user to create an audit log entry
      // (Used during atomic batches for publish/unpublish)
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      
      // Read/Delete/Update: System/Admin only (deny by default for users)
      allow read, update, delete: if false; 
    }

    /* =========================
       ADMIN ACTIONS
    ========================== */
    match /adminActions/{actionId} {
      // Create and read allowed for admins only
      allow create, read: if isAdmin();
      
      // Immutable actions
      allow update, delete: if false;
    }
  }
}
