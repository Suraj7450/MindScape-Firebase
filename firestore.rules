rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // SECRETS - Deny ALL client access FIRST (more specific rules take precedence)
    // User Profile Document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Mind Maps Subcollection
    match /users/{userId}/mindmaps/{mindmapId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Explicitly deny secrets (redundant but safe)
    match /users/{userId}/secrets/{document=**} {
      allow read, write: if false;
    }

    // Public mind maps can be read by anyone, created by authenticated users,
    // and deleted only by the original author.
    match /publicMindmaps/{mindmapId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.originalAuthorId;
      allow update: if false; // Prohibit updates for now
    }
  }
}
