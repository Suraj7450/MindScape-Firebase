rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /* =========================
       USER PRIVATE DATA
    ========================== */
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /mindmaps/{mindmapId} {
        allow create: if isOwner(userId)
          && request.resource.data.userId == userId;
        allow read: if isOwner(userId);
        allow update: if isOwner(userId)
          && (!('userId' in resource.data) || resource.data.userId == userId);
        allow delete: if isOwner(userId);

        match /nodes/{nodeId} {
          allow read, write: if isOwner(userId);
        }
        match /content/{docId} {
          allow read, write: if isOwner(userId);
        }
      }
    }

    /* =========================
       PUBLIC MIND MAPS
    ========================== */
    match /publicMindmaps/{mindmapId} {
      // Anyone can read public maps
      allow read: if true;

      // Create: signed-in users only
      allow create: if isSignedIn()
        && request.resource.data.originalAuthorId == request.auth.uid;

      // Update: Author can update their own map, others can only update views
      allow update: if isSignedIn() && (
        (resource.data.originalAuthorId == request.auth.uid) // Author can update everything
        || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views'])) // Others can only update views
      );

      // Delete: only author
      allow delete: if isSignedIn() && resource.data.originalAuthorId == request.auth.uid;
    }
  }
}
