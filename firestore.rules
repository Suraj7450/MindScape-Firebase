rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    /* =========================
       USER PRIVATE DATA
    ========================== */
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /mindmaps/{mindmapId} {

        // CREATE: must be signed in & owner
        allow create: if isOwner(userId)
          && request.resource.data.userId == userId;

        // READ: only owner
        allow read: if isOwner(userId);

        // UPDATE: only owner (path-based ownership is sufficient)
        allow update: if isOwner(userId);

        // DELETE: path-based ownership (secure since path contains userId)
        allow delete: if isOwner(userId);

        // Optional nested collection
        match /nodes/{nodeId} {
          allow read, write: if isOwner(userId);
        }

        // Content subcollection (for split schema)
        match /content/{docId} {
          allow read, write: if isOwner(userId);
        }
      }
    }

    /* =========================
       AUDIT & ACTIVITY LOGS
    ========================== */
    match /activityLogs/{logId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      
      allow read, update, delete: if false; 
    }

    /* =========================
       ADMIN ACTIONS
    ========================== */
    match /adminActions/{actionId} {
      allow create, read: if isAdmin();
      allow update, delete: if false;
    }
  }
}
